<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="fr.tournois.ui.controller.LoginController" hgap="10" vgap="10" alignment="CENTER" styleClass="editor-pane">
    <padding>
        <javafx.geometry.Insets top="20" right="20" bottom="20" left="20" />
    </padding>
    <Label text="Pseudo :*" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="required-label"/>
    <TextField fx:id="pseudoField" GridPane.rowIndex="0" GridPane.columnIndex="1" promptText="Votre pseudo"/>
    <Label text="Mot de passe :*" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="required-label"/>
    <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1" promptText="Votre mot de passe"/>
    <HBox spacing="10" alignment="CENTER_RIGHT" GridPane.rowIndex="2" GridPane.columnIndex="1">
        <Button text="Connexion" onAction="#doConnexion" fx:id="loginButton" />
    </HBox>
    <Label fx:id="messageLabel" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2" style="-fx-text-fill: red;" />
</GridPane>
