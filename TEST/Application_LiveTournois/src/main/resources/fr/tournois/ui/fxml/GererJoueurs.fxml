<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" 
      fx:controller="fr.tournois.ui.controller.GererJoueursController" 
      spacing="15">
    
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <!-- En-tête avec titre et info équipe -->
    <HBox spacing="15" alignment="CENTER_LEFT">
        <Label text="Gestion des Joueurs" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
        <Label fx:id="equipeLabel" style="-fx-font-weight: bold;"/>
    </HBox>

    <!-- Formulaire de saisie -->
    <GridPane hgap="15" vgap="10">
        <padding>
            <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
        </padding>

        <Label text="ID:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="idField" disable="true" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Pseudo:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="pseudoField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label text="Nom:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="nomField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="Prénom:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="prenomField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

        <Label text="Date de naissance:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <DatePicker fx:id="dateNaissancePicker" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
    </GridPane>

    <!-- Barre de boutons -->
    <HBox spacing="10">
        <Button text="Créer" onAction="#creerJoueur"/>
        <Button text="Modifier" onAction="#modifierJoueur"/>
        <Button text="Supprimer" onAction="#supprimerJoueur"/>
        <Button text="Effacer" onAction="#viderChamps"/> 
        <Button text="Générer PDF Joueur" onAction="#genererPDFJoueurSelectionne"/>
        <Button text="Générer PDF Liste" onAction="#genererPDFListeJoueurs"/>
    </HBox>

    <!-- Tableau des joueurs -->
    <TableView fx:id="joueursTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
            <TableColumn fx:id="pseudoColumn" text="Pseudo" prefWidth="150"/>
            <TableColumn fx:id="nomColumn" text="Nom" prefWidth="150"/>
            <TableColumn fx:id="prenomColumn" text="Prénom" prefWidth="150"/>
            <TableColumn fx:id="dateNaissanceColumn" text="Date de naissance" prefWidth="150"/>
        </columns>
    </TableView>

    <!-- Barre de recherche -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Rechercher:"/>
        <TextField fx:id="rechercheField" HBox.hgrow="ALWAYS"/>
    </HBox>

</VBox>
